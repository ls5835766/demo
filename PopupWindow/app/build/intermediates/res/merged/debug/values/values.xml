<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#ff000000</color>
    <color name="detail_gray">#5f5f5f</color>
    <color name="dividerline">#E0E0E0</color>
    <color name="fleet_gray">#888888</color>
    <color name="gray_888">#888888</color>
    <color name="home_content">#fafafa</color>
    <color name="transparent">#00000000</color>
    <color name="white">#ffffffff</color>
    <color name="window_bg">#fff5f5f5</color>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <drawable name="divider_line">@color/dividerline</drawable>
    <string name="action_settings">Settings</string>
    <string name="app_name">PopupWindow</string>
    <string name="hello_world">Hello world!</string>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.









        -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="black16">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="btn_sub">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:layout_marginBottom">15dip</item>
        <item name="android:background">@drawable/btn_sub</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18.0sp</item>
    </style>
    <style name="btn_submit_red" parent="btn_sub">
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:background">@drawable/btn_submit_red</item>
    </style>
    <style name="detail_gray16">
        <item name="android:textColor">@color/detail_gray</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@drawable/divider_line</item>
    </style>
    <style name="fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="fill_width">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>